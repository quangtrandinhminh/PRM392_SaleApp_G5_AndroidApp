<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="textviewTitle" parent="parent">
        <item name="android:textColor">@color/material_dynamic_primary80</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--designs for login and register-->
    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginParent" parent="parent">
        <item name="android:background">@color/cardview_light_background</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="loginCard" parent="loginParent">
        <item name="android:elevation">5dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="headerText" parent="viewParent">
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="linearParent" parent="parent">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">@dimen/loginViewsMargin</item>
    </style>

    <style name="headerTextPrimary" parent="headerText">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">@dimen/newsMoreTextSize</item>
        <item name="android:backgroundTint">@color/secondary</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/login_button_bk</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="loginButton1" parent="viewParent">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/button_round_shape_bk</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="orderButton" parent="viewParent">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="itemTitle" parent="viewParent">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="itemPrice" parent="viewParent">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="itemDescription" parent="viewParent">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>