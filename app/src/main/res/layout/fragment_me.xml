<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".UI.User.MeFragment">

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="54dp"
        android:background="@drawable/circular_indicator"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnEditProfile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/icon_background_circle"
        android:src="@drawable/baseline_edit_24"
        app:layout_constraintBottom_toBottomOf="@id/ivAvatar"
        app:layout_constraintEnd_toEndOf="@id/ivAvatar" />

    <TextView
        android:id="@+id/tvUsername"
        style="@style/headerTextPrimary"
        android:layout_marginTop="8dp"
        android:text="Username"
        android:textColor="@color/secondary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/ivAvatar"
        app:layout_constraintStart_toStartOf="@+id/ivAvatar"
        app:layout_constraintTop_toBottomOf="@+id/ivAvatar" />

    <TextView
        android:id="@+id/tvRole"
        style="@style/loginButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="@dimen/spacing_small"
        android:text="Role"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvUsername"
        app:layout_constraintStart_toStartOf="@id/tvUsername"
        app:layout_constraintEnd_toEndOf="@id/tvUsername"
        android:layout_marginTop="4dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/order_menu_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/secondary"
        android:padding="@dimen/spacing_small"
        app:layout_constraintTop_toBottomOf="@id/tvRole"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        >
        <!-- Horizontal menu items -->
        <TextView
            android:id="@+id/tvOrderStatusTitle"
            style="@style/viewParent"
            android:text="Order"
            android:layout_margin="@dimen/spacing_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tvHistoryOrders"
            style="@style/viewParent"
            android:text="History"
            android:layout_margin="@dimen/spacing_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvWaitToConfirm"
            style="@style/orderButton"
            android:text="Wait to Confirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOrderStatusTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvWaitToGet"
            android:layout_marginStart="16dp"/>
        <TextView
            android:id="@+id/tvWaitToGet"
            style="@style/orderButton"
            android:text="Wait to Get"
            app:layout_constraintTop_toBottomOf="@id/tvOrderStatusTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvWaitToShip"
            app:layout_constraintStart_toEndOf="@id/tvWaitToConfirm"
            />
        <TextView
            android:id="@+id/tvWaitToShip"
            style="@style/orderButton"
            android:text="Wait to Ship"
            app:layout_constraintTop_toBottomOf="@id/tvOrderStatusTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvComplete"
            app:layout_constraintStart_toEndOf="@id/tvWaitToGet"
            />

        <TextView
            android:id="@+id/tvComplete"
            style="@style/orderButton"
            android:text="Complete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvWaitToShip"
            app:layout_constraintTop_toBottomOf="@id/tvOrderStatusTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Logout Button near the bottom -->
    <Button
        android:id="@+id/btnLogout"
        style="@style/loginButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
